// File: src/test.jsx (Menggunakan Polling HTTP)

import React, { useState, useEffect } from 'react';
// import io from 'socket.io-client'; // <-- DIHAPUS
import axios from 'axios';
import MetricCard2 from './MetricCard2'; 
import TemperatureChart2 from './TemperatureChart2';
import DataHistoris2 from './DataHistoris2';

const Test = () => {
    // URL Backend TIDAK DIPERLUKAN LAGI. Gunakan path relatif '/'
    // const SERVER_URL = 'http://147.185.221.194:65052'; // <-- DIHAPUS

    const POLLING_INTERVAL = 10000; // 10 detik

    // State untuk menyimpan data
    const [suhu, setSuhu] = useState('...'); 
    const [historisData, setHistorisData] = useState([]); 
    // const [statusKoneksi, setStatusKoneksi] = useState('Menghubungkan...'); // <-- DIHAPUS (Tidak perlu status WSS)
    const [dbError, setDbError] = useState(null);
    const [isLoading, setIsLoading] = useState(true);
    
    // --- FUNGSI LOGIC PENGAMBILAN DATA HISTORIS (Saat Komponen Dimuat) ---
    const fetchHistoricalData = async () => {
        setIsLoading(true); 
        setDbError(null); Â 
        try {
            // Panggil endpoint Historis (untuk chart dan log)
            // Gunakan path relatif (misalnya /api/data/historis) untuk HTTPS di Vercel
            const response = await axios.get('/api/data/historis'); 
            const data = response.data; 
            
            // 1. Set historis
            setHistorisData(data); 
            
            // 2. Set Suhu Awal dari data Historis
            if (data.length > 0) {
                const latestTemp = parseFloat(data[0].suhu);
                if (!isNaN(latestTemp)) {
                    setSuhu(latestTemp); 
                }
            }
        } catch (error) {
            console.error('Gagal mengambil data historis:', error);
            // Tangani error Mixed Content di sini jika domain belum HTTPS:
            setDbError(`Gagal memuat data: ${error.message}. Pastikan backend menggunakan HTTPS.`);
        } finally {
            setIsLoading(false); 
        }
    };
    
    // --- FUNGSI LOGIC POLLING DATA TERBARU ---
    const fetchLatestData = async () => {
        try {
            // Panggil endpoint terbaru untuk Polling (menggantikan SocketIO)
            const response = await axios.get('/api/data/latest');
            const data = response.data;
            
            if (data && data.suhu) {
                const newSuhu = parseFloat(data.suhu);
                if (!isNaN(newSuhu)) {
                    setSuhu(newSuhu); // Update Current Temp
                    
                    // Update Historis Data: tambahkan data terbaru ke array (agar chart bergerak)
                    setHistorisData(prevData => {
                        // Cek duplikasi (optional, tapi disarankan)
                        if (prevData[0] && prevData[0].timestamp === data.timestamp) {
                            return prevData;
                        }
                        // Masukkan data baru di depan array
                        return [data, ...prevData];
                    });
                }
            }
        } catch (error) {
            console.error('Gagal Polling Data:', error.message);
            // setDbError(`Polling gagal: ${error.message}`); // Jangan set error setiap kali polling gagal
        }
    };


    useEffect(() => {
        // 1. Ambil data historis saat awal (Sekali)
        fetchHistoricalData(); 
        
        // 2. Atur Polling (Berulang)
        const intervalId = setInterval(fetchLatestData, POLLING_INTERVAL);
        
        // 3. Cleanup: Hapus interval saat komponen di-unmount
        return () => clearInterval(intervalId);

        // HAPUS SEMUA LOGIC SOCKET.IO DI SINI
        // const socket = io(SERVER_URL);
        // ... socket.on('connect', ...
    }, []);

    // ... (Logika lainnya seperti getTemperatureStatus, MAX/MIN tetap sama)
    const getTemperatureStatus = (temp) => {
        // ... (Logika suhu tetap sama) ...
        const t = typeof temp === 'number' ? temp : parseFloat(temp);
        
        if (isNaN(t) || t === '...') {
            return { label: '...', color: 'text-gray-400', border: 'border-gray-500', description: 'Menunggu Data Suhu.' };
        }
        if (t > 35) {
            return { label: 'KRITIS', color: 'text-red-500', border: 'border-red-500', description: 'WARNING: Suhu di atas 35Â°C!' };
        }
        if (t > 30) {
            return { label: 'PANAS', color: 'text-yellow-500', border: 'border-yellow-500', description: 'Suhu 30Â°C - 35Â°C.' };
        }
        if (t >= 25) { 
            return { label: 'NORMAL', color: 'text-green-400', border: 'border-green-500', description: 'Suhu 25Â°C - 30Â°C.' };
        }
        if (t < 25) { 
            return { label: 'DINGIN', color: 'text-cyan-400', border: 'border-cyan-500', description: 'Suhu di bawah 25Â°C.' };
        }
    };
    
    // Perhitungan MAX/MIN
    const validTemps = historisData
        .map(d => parseFloat(d.suhu))
        .filter(t => !isNaN(t));

    const maxTemp = validTemps.length > 0 ? Math.max(...validTemps).toFixed(1) : '...';
    const minTemp = validTemps.length > 0 ? Math.min(...validTemps).toFixed(1) : '...';
    
    const currentTempStatus = getTemperatureStatus(suhu);

    const logLimit = 100;
    const latestLogs = historisData.slice(0, logLimit);
    
    // --- RENDER UI ---
    return (
        <div className="min-h-screen bg-gray-900">
            <div className="max-w-4xl mx-auto p-2 w-full flex flex-col grow space-y-3 overflow-hidden" >
                
                <h1 className="text-2xl font-bold text-white border-b border-gray-700 pb-1">
                    DASHBOARD SUHU
                </h1>

                {dbError && <div className="p-2 bg-red-800 text-white rounded-md text-sm">
                    {dbError}
                </div>}

                {/* Grid 3 Kolom untuk Metrik Utama */}
                <div className="grid grid-cols-1 md:grid-cols-3 gap-10 ">
                    
                    {/* 1. CURRENT TEMP */}
                    <MetricCard2
                        title="CURRENT TEMP"
                        value={
                            <div className="flex items-baseline justify-center text-3xl"> 
                                <span className="text-cyan-400 font-bold">
                                    {typeof suhu === 'number' ? suhu.toFixed(1) : suhu}Â°C
                                </span>
                            </div>
                        }
                        color="blue"
                        icon="ðŸŒ¡ï¸"
                        className="w-full md:max-w-[250px]"
                    />
                    
                    {/* 2. Kartu Status (Dynamic Color & Suhu Based) */}
                    <div className={`bg-gray-800 p-2 rounded-xl shadow-lg border-l-4 ${currentTempStatus.border} w-full max-w-[250px] mx-auto`}>
                        <div className="text-center text-xs uppercase text-gray-400 mb-0.5 ">
                            STATUS SUHU
                        </div>
                        <div className="text-center font-bold text-2xl">
                            <span className={currentTempStatus.color}>
                                {currentTempStatus.label}
                            </span>
                        </div>
                        <div className="text-xs text-center text-gray-400 mt-0.5"> 
                            {currentTempStatus.description} 
                            {/* Menunjukkan status Polling, bukan WSS */}
                            <span className="block mt-1">
                                Polling Setiap 10 Detik
                            </span>
                        </div>
                    </div>

                    {/* 3. DAILY HI/LO */}
                    <MetricCard2
                        title="DAILY HI/LO"
                        value={
                            <div className="text-white text-xl font-bold">
                                MAX :<span className="text-green-400"> {maxTemp}Â°C</span>
                                <br />
                                MIN&nbsp; :<span className="text-cyan-400"> {minTemp}Â°C</span>
                            </div>
                        }
                        color="red"
                        className="w-full md:max-w-[250px] ml-auto"
                    />
                </div>

                {/* Baris 2 & 3: Meneruskan data historis */}
                <TemperatureChart2 data={historisData} />
                <DataHistoris2 data={latestLogs} />
            </div>
        </div>
    );
};

export default Test;
